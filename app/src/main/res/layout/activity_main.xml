<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_id"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:text="Sandwich" />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/hamb"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/hamburguesa"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

        <Button
            android:id="@+id/sand_mas"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="+" />

        <EditText
            android:id="@+id/sandwich_text"
            android:layout_width="96dp"
            android:hint="0"
            android:maxLength="2"
            android:layout_height="wrap_content"
            android:inputType="number" />
        <Button
            android:id="@+id/sand_menos"
            android:layout_height="wrap_content"
            android:layout_width="96dp"
            android:text="-" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginRight="25dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tuku"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:text="Tucumana" />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/tucumana"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <Button
            android:id="@+id/tucu_mas"
            android:layout_gravity="center_horizontal"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="+" />

        <EditText
            android:id="@+id/tucu_text"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:hint="0"
            android:inputType="number" />
        <Button
            android:id="@+id/tucu_menos"
            android:layout_height="wrap_content"
            android:layout_width="96dp"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pavita"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:text="Pavita" />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/pavita_img"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/pavita"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <Button
            android:id="@+id/pavita_mas"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="+" />

        <EditText
            android:id="@+id/pavita_text"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:maxLength="2"
            android:inputType="number" />
        <Button
            android:id="@+id/pavita_menos"
            android:layout_height="wrap_content"
            android:layout_width="96dp"
            android:text="-" />

    </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/calcular"
        android:layout_width="100dp"
        android:layout_marginTop="10dp"
        android:layout_height="100dp"
        android:background="@drawable/button_circle"
        android:text="Calcular"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mini"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="18dp"
                android:text="Refresco Mini" />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mini_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/mini"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <Button
                android:id="@+id/mini_mas"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="+" />

            <EditText
                android:id="@+id/mini_text"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:maxLength="2"
                android:inputType="number" />
            <Button
                android:id="@+id/mini_menos"
                android:layout_height="wrap_content"
                android:layout_width="96dp"
                android:text="-" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cebada"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="18dp"
                android:text="Cebada" />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cebada_img"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/cebada"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <Button
                android:id="@+id/cebada_mas"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="+" />

            <EditText
                android:id="@+id/cebada_text"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:maxLength="2"
                android:inputType="number" />
            <Button
                android:id="@+id/cebada_menos"
                android:layout_height="wrap_content"
                android:layout_width="96dp"
                android:text="-" />

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/reset"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Resetear campos" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>